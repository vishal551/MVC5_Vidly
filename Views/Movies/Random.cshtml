@model MVC_Sample.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customer.Count > 5 ? "Populer" : null;

}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customer.Count == 0)
{

    <text> No one has rented this movie before </text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>@customer.Name</li>

        }
    </ul>

}

